<h1>
  <%= link_to 'Add New', new_post_path, class:'header-menu' %>
  記事一覧
</h1>
<ul>
  <% @posts.each do |post| %>
  <li>
    <%= link_to post.title, post_path(post) %>
    <%= link_to '[編集]', edit_post_path(post), class: 'command' %>
    <%= link_to '[削除]',post_path(post),method: :delete,class: 'command',data: { confirm: '本当に削除しますか？' } %>
    </li>
  <% end %>
</ul>
